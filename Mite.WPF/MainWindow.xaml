<Window x:Class="Mite.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:common="clr-namespace:Mite.WPF.View.Common"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Example">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical" Width="100" DockPanel.Dock="Left">
            <Button Click="d1ToXY">
                <TextBlock Text="Tile w/ 1D array" Padding="0,5" TextWrapping="Wrap"/>
            </Button>
            <Button Click="Next_Thing">
                <TextBlock Text="Next thing" Padding="0,5" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
        <common:GraphTilesControl x:Name="GraphTilesControl" />
     </DockPanel>
</Window>
